---
import Header from '../components/Header.astro';
import Island from '../components/Island.astro';
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Discover the portfolio of Mario Hernández Martínez, a skilled software and web developer building modern applications for businesses and individuals." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../MakeWeb_MM.svg"/>
		<title>{title}</title>
	</head>
	<body class="bg-[url('/blue-sky-background.webp')] bg-fixed bg-cover bg-[var(--color-secondary)] md:overflow-hidden">
		<Header />
		<Island />
		<slot />
		
	</body>
	
	
</html>


<style is:global>
    html {
		font-family: Kepler-296, 'Kepler 296', sans-serif;
		font-size: 16px;
	}

	
</style>
