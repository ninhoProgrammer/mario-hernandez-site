---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

---

<Layout title="MAKE WEB">
	<main class="relod">
		<section class="section flex h-screen w-screen flex-col relative items-center justify-center z-36">
			<Hero />
		</section>

		<section class="section px-20 h-screen w-screen flex justify-center md:items-center z-36">
			<Card title="About me" text="Software developer specialized in C#, Windows Forms, and .NET ..." img="https://static.vecteezy.com/system/resources/previews/002/530/966/non_2x/realistic-summer-beach-scenery-background-with-palm-trees-free-vector.jpg" pick="" href="/aboutme" />
		</section>
		<section class="section pr-20 h-screen w-screen flex justify-center md:justify-end md:items-center z-36">
			<Card title="Skills" text="" img="../image1.webp" pick="" href="/skills" />
		</section>
		
		<section class="section pl-20 h-screen w-screen flex justify-center md:justify-start md:items-center z-36">
			<Card title="Services" text="" img="../image1.webp" pick="" href="" />
		</section>
		
		<section class="section px-1 h-screen w-screen flex justify-center md:justify- md:items-center z-36">
			<Card title="Services" text="" img="../image1.webp" pick="" href="" />
		</section>
		
		<section class="section h-screen w-screen text-center overflow-hidden translate-y-0">
			<Footer />
		</section>
		
		
	</main>
	
</Layout>

<style>
.section {
	transition: transform 10s ease-in-out;
}
</style>

