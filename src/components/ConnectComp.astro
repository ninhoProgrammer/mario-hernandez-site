---
import  SocialNetworks  from './SocialNetworks.astro';
---

<section class="flex flex-col md:flex-row items-center justify-center min-h-screen px-6 relative overflow-hidden py-16 z">
    

    <div class="bg-white/80 text-white p-10 md:w-1/4 rounded-t-3xl md:rounded-l-3xl md:rounded-tr-none shadow-lg ">
        <h2 class="relative text-2xl text-center font-bold mb-8 z-10">Contact Us</h2>
        <div class="flex w-full md:h-72 p-4 justify-center items-center mb-4">
            <div class="absolute w-48 h-60 bg-red-500 rounded-t-2xl -mt-52 z-1"></div>
            <div class="w-52 h-52 bg-[url('https://images.unsplash.com/photo-1511367461989-f85a21fda167?fm=jpg&q=60&w=3000')] bg-cover bg-center rounded-full shadow-lg border-4 border-white/80 z-10"></div>
            <!-- <div class="absolute w-72 h-44 bg-red-500 rounded-b-2xl mt-52 z-1"></div> -->
            <div class="absolute w-28 h-16 bg-red-500 rounded-full -mb-48 text-white text-2xl font-bold flex items-center justify-center shadow-md z-20">
                <span>TKS</span>
            </div>
        </div>

        <SocialNetworks />
    </div>
    
    <!-- Right Form Panel -->
    <div class="bg-red-500 p-10 md:w-1/2 rounded-b-3xl md:rounded-r-3xl md:rounded-bl-none text-sm text-gray-800 shadow-lg pr-10">
        <h2 class="text-2xl font-bold mb-8 text-white">Send email</h2>
    
        <form action="#" method="POST" class="space-y-6">
            <div>
                <input type="text" placeholder="Enter your Name" class="w-full border-b-2 p-1 border-gray-400 focus:outline-none focus:border-gray-500 py-2 placeholder-gray-500" required>
            </div>
            <div>
                <input type="email" placeholder="Enter a valid email address" class="w-full border-b-2 p-1 border-gray-400 focus:outline-none focus:border-red-500 py-2 placeholder-gray-500" required>
            </div>
            <div>
                <textarea rows="4" placeholder="Your Message" class="w-full border-b-2 p-1 border-gray-400 focus:outline-none focus:border-red-500 py-2 placeholder-gray-500" required></textarea>
            </div>
            <button type="submit" class="inline-block px-8 py-3 border-2 text-white border-white rounded-full hover:bg-red-500 hover:text-gray-500 hover:border-white font-bold transition-all">
                Send
            </button>
        </form>
    </div>
      
</section>